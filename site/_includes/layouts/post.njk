---
layout: layouts/page.njk
---
<article class="max-w-3xl prose prose-zinc dark:prose-invert mx-auto p-8">

  <!-- Back -->

  <a href="/" class="block">
    <span class="inline-flex items-center rounded-full bg-orange-600 px-3 py-0.5 text-sm font-medium text-white">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="currentColor" class="w-3 h-3">
        <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5L8.25 12l7.5-7.5" />
      </svg>
      <span>
        &nbsp;All posts
      </span>
    </span>
  </a>

  <!-- Title -->

  <h1 class="mb-0 mt-4">
    {{ title }}
  </h1>

  <!-- Meta -->

  <p class="text-md mt-2">
    <span class="text-zinc-500">
      {{ data.date | publishDate }} in
    </span>
    <span class="text-zinc-500">
      {%- for tag in data.tags or tags -%}
        {%- if tag != "post" -%}
          {{ tag }}
        {%- endif -%}
      {%- endfor -%}
    </span>
    <span class="text-zinc-500">
      Â· {{ content | readingTime }}
    </span>
  </p>

  <!-- Content -->

  <div class="pt-8">
    {{ content | safe }}
  </div>
</article>
